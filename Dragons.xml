<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="caf"
           fetch="http://source.codeaurora.org/quic/la"
           review="codeaurora.org"/>

  <remote  name="github"
           fetch="https://github.com" />

  <remote  name="Lineage"
           fetch="https://github.com/LineageOS"
           revision="refs/heads/lineage-15.0" />
	
  <remote  name="Dragons-CAF"
           fetch="https://github.com/Dragons-CAF" 
           revision="O" /> 

  <default revision="refs/tags/LA.UM.6.5.r1-02500-8x96.0"
           remote="caf"
           sync-j="8"
           sync-c="true"/>
	

  <!--Dragon's Repos-->

  <project path="art" 					name="platform_art" 					remote="Dragons-CAF" />
  <project path="bionic" 				name="platform_bionic" 					remote="Dragons-CAF" />

  <!-- Build -->
  <project  path="build/make" 				name="platform_build" 					remote="Dragons-CAF" >
    <copyfile 	src="core/root.mk" 			dest="Makefile" />
    <linkfile 	src="CleanSpec.mk" 			dest="build/CleanSpec.mk" />
    <linkfile 	src="buildspec.mk.default" 		dest="build/buildspec.mk.default" />
    <linkfile 	src="core" 				dest="build/core" />
    <linkfile 	src="envsetup.sh" 			dest="build/envsetup.sh" />
    <linkfile 	src="target" 				dest="build/target" />
    <linkfile 	src="tools" 				dest="build/tools" />
  </project>
  <project path="build/kati" 				name="platform_build_kati" 				remote="Dragons-CAF" />

  <project path="build/soong" 				name="platform_build_soong" 				remote="Dragons-CAF" >
    <linkfile 	src="root.bp" 				dest="Android.bp" />
    <linkfile 	src="bootstrap.bash" 			dest="bootstrap.bash" />
  </project>

  <project path="build/blueprint" 			name="platform_build_blueprint" 			remote="Dragons-CAF" />
 
  <project path="hardware/interfaces" 			name="platform_hardware_interfaces" 			remote="Dragons-CAF" 		revision="O-AOSP" />
  <project path="system/bt" 				name="platform_system_bt" 				remote="Dragons-CAF" 		revision="O-AOSP" />
  <project path="system/core" 				name="platform_system_core" 				remote="Dragons-CAF" />
  <project path="system/vold" 				name="platform_system_vold" 				remote="Dragons-CAF" />
  <project path="system/sepolicy" 			name="platform_system_sepolicy" 			remote="Dragons-CAF" />

  <!-- Import CAF Repos -->
  <include name="CAF.xml" />

  <!-- Import Lineage HALs -->
  <include name="Lineage.xml" />
</manifest>
